<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%=t("events") %></h1>

<h2><%=t("all_events") %></h2>
<table class="admin-report" width="545">
	<thead>
		<tr>
      		<th><%=t("begin")%> - <%=t("end")%></th>
                <th><%=t("title")%></th>
      		<th><%=t("action")%></th>
    	</tr>
  	</thead>
	
	<tbody>
    	<% @events.each do |event| %>
		<tr class="<%= cycle('even', 'odd') %>">
			<td>
				<%= event.begin_event.strftime("%b %d, %Y %I:%M%p") %> - <%= event.end_event.strftime("%b %d, %Y %I:%M%p")%>
			</td>
                        <td><%= event.title %></td>
			<td>
	          <%=link_to t("edit"), edit_object_url(event), :id => "edit_#{event.id}" %> |
	          <%=link_to t("delete"), object_url(event), :method => :delete, :id => "delete_#{event.id}" %>
	        </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t("new_event"), new_object_url, :id => "new_event" %>
<p>&nbsp;</p>
<h2><%=t("global_settings")%></h2>
<% form_tag(admin_events_settings_path, :method => :put) do -%>
  <table>
    <tr>
      <td><label><%= t("days_before") %></label></td>
      <td> <%= text_field_tag('preferences[events_days_before]', Spree::Config[:events_days_before]) %></td>
    </tr>
    <tr>
      <td><label><%= t("days_after") %></label></td>
      <td><%= text_field_tag('preferences[events_days_after]', Spree::Config[:events_days_after]) %></td>
    </tr>
   </table>
  <p class="form-buttons">
    <%= button t('update') %>
  </p>
<% end -%>
